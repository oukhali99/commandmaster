<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefWidth="258.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.oukhali99.commandmaster.uicontrollers.NewCommandViewController">
   <children>
      <VBox prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label text="Name" />
            <StackPane prefHeight="150.0" prefWidth="200.0">
               <children>
                  <TextField fx:id="nameTextField" />
               </children>
            </StackPane>
            <Label text="Command" />
            <StackPane prefHeight="150.0" prefWidth="200.0">
               <children>
                  <TextField fx:id="commandValueTextField" />
               </children>
            </StackPane>
            <HBox nodeOrientation="RIGHT_TO_LEFT">
               <children>
                  <Button mnemonicParsing="false" onAction="#cancelButtonAction" text="Cancel" />
                  <Button mnemonicParsing="false" onAction="#okButtonAction" text="OK" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
